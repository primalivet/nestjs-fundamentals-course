// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id       Int    @id @default(autoincrement())
  title    String
  votes    Int    @default(0)
  author   User   @relation(fields: [authorId], references: [id])
  authorId Int
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  posts     Post[]
}

model Coffee {
  id          Int      @id @default(autoincrement())
  name        String
  description String   @default("")
  brand       String
  flavors     Flavor[]
}

model Flavor {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  coffees Coffee[]
}
