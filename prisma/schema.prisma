// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coffee {
  id          Int      @id @default(autoincrement())
  name        String
  description String   @default("")
  brand       String
  flavors     Flavor[]
}

model Flavor {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  coffees Coffee[]
}
